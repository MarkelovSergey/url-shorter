{
  "name": "Go",
  "image": "golang:1.25.1-alpine3.22",
  "runArgs": [
    "--name",
    "url-shorter"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.Go",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "forwardPorts": [
    8080
  ],
  "postCreateCommand": "apk add git && go install -v github.com/go-delve/delve/cmd/dlv@latest"
}